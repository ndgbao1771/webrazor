@page "/xem-bai-viet/{id:int}/"
@model razorweb.Pages_Blog.DetailsModel

@{
    ViewData["Title"] = @Model.Article.Title;
}

<h1>@Html.DisplayFor(model => model.Article.Title)</h1>
<p><i>@Html.DisplayFor(model => model.Article.PublishDate)</i></p>
<hr>
<div>
    <h4>Thông tin bài viết</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.PublishDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.PublishDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Article.Content)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Article.ID">Edit</a> |
    <a class="btn btn-primary" asp-page="./Index">Back to List</a>
</div>
