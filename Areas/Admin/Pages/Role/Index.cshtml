@page "/admin/roles"
@model razorweb.Admin.Role.IndexModel
@{
    ViewData["Title"] = "Danh sách các thành viên";
}
<h2>@ViewData["Title"]</h2>


<partial name="_StatusMessage" model="@Model.StatusMessage" />

<div class="mb-2">
    <a class="btn btn-secondary" asp-page="./Create">Tạo role mới</a>
    <a class="btn btn-secondary" asp-page="../User/Index">Quản lí thành viên</a>
</div>

<table class="table"> 
     <tr>
        <th>Tên Role (vai trò)</th>
        <th>Tác vụ</th>
    </tr>
    @foreach (var role in Model.roles)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-roleid="@role.Id">Cập nhật</a>
                <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-roleid="@role.Id">Xóa</a>
            </td>
        </tr>
    }
</table>